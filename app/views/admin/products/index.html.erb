<h2>Products</h2>

<div class="dropdown">
  <button class="dropbtn">New</button>
  <div class="dropdown-content">
    <%= link_to 'Simple', new_admin_product_path(style_product: :simple) %>
    <%= link_to 'Configable', new_admin_product_path(style_product: :configable) %>
  </div>
</div>

<table>
  <tr>
    <th>Name</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <% Product.products_by([:simple, :configable]).each do |product| %>
    <tr>
      <td>
        <%= product.name %>  
      </td>
      <td>
        <%= link_to "Edit", edit_admin_product_path(product) %>
      </td>
      <td>
        <%= link_to "Delete", admin_product_path(product), data: { "turbo-method": :delete } %>
      </td>
    </tr>
  <% end %>
</table>